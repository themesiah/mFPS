#version 400
layout (location = 0) in vec3 vp;
layout (location = 1) in vec2 texCoord;
layout (location = 2) in vec3 normal;

uniform mat4 transform;
uniform mat4 projection;
uniform mat4 view;

out vec2 oTexCoord;
out vec3 oNormal;

void main() {
	gl_Position = projection * view * transform * vec4(vp, 1.0f);
	oTexCoord = texCoord;
	oNormal = normal;
}